---
layout: layouts/base.njk
---

<img src="{{ 'images/banner.jpg' | url }}" alt="banner" class="full banner">

<div class="container">
    <p class="text-center">
        Hello! Welcome to the Eleventy + Netlify CMS!
    </p>

    <p class="heading text-center">
        Featured Posts
    </p>

    <div class="flex article-list justify-center">
        {% for post in collections.posts %}
        {% if post.data.isFeatured %}
        <a href="{{ post.url | url }}" class="post flex column space-between">
            <img src="{{ post.data.featuredImage | url }}" alt="featured-image">
            
            <div class="details">
                <strong>
                    {{ post.data.title }}
                </strong>
                <span>
                    {{ post.data.description }}
                </span>
            </div>
            
        </a>
        {% endif %}
           
        {% endfor %}
    </div>
    
