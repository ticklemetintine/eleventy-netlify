---
layout: "/layouts/investor/index.njk"
---

<div class="contentpage-body dash-above" id="four-structural-trends" data-quick-links-item="Four Structural Trends">
    {{ before_writeup | markdown | safe }}

    <img class="hidden-mobile" src="{{ desktop_trend | url }}" alt="Better Smarter Sustainable" />
    <div class="hidden-desktop m-t-15 m-b-15">
        {% for trend in mobile_trend %}
        <img class="flow-this title" src="{{ trend['image'] }}" alt="{{ trend['title'] }}" />
        {% endfor %}
    </div>

    {% for item in sections %}
        {% if item['highlight'] %}
           <div class="contentpage-blockquote-row row highlight-below">
                <div class="col-8">
                    {{ item['writeup'] | markdown | safe }}
                    <div class="contentpage-highlight contentpage--hidden-desktop contentpage-mobile--m-t-10">
                        {{ item['highlight'] | markdown | safe }}
                    </div>
                </div>
                
                {% if item['center'] == "true" %}
                <div class="col-4 v-centre">
                {% else %}
                <div class="col-4">
                {% endif %}
                    <div class="contentpage-highlight contentpage-mobile--m-t-10 contentpage--hidden-mobile">
                        {{ item['highlight'] | markdown | safe }}
                    </div>
                </div>
            </div>
        {% else %}
            {{ item['writeup'] | markdown | safe }}
        {% endif %}
    {% endfor %}

    <div class="active-img-wrap chart-container" id="how-we-invest_delivering-sustainable-value">
        <img id="delivering-sustainable-returns-over-the-long-term" data-quick-links-item="Delivering Sustainable Returns over the Long Term" src="{{ sustainable_image | url }}" class="fade-in-up"
            alt="Delivering Sustainable Returns over the Long Term" />
    </div>
</div>