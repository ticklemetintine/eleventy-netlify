---
layout: "/layouts/media-centre/index.njk"
unique_slug: "media-centre-videos"
---

<div class="contentpage-body">

    <div class="row flow-ignore">
        {% for video in videos %}
            <div class="col-6 flow-this">
                <div class="video-item">

                    <h4>{{ video['title'] }}</h4>
                    <div class="video-item-wrapper">
                        <a href="{{ video['link'] }}"></a>

                        <div class="img">
                            <img src="{{ video['thumbnail'] }}"
                                alt="{{ video['title'] }}" title="" />
                            <div class="bg-gradient"></div>
                        </div>

                        <div class="detail">
                            <p>{{ video['desc'] | safe }}</p>
                            <div class="button-play">
                                <span class="play-icon">
                                </span>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        {% endfor %}

    </div>
</div>